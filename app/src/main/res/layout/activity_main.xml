<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"

    tools:context="com.example.androidl.prekart.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"><!--iss khi bhi image move hojaeigi-->




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/textSlogan"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="210dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <info.hoang8f.widget.FButton
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:buttonColor="@color/btnSignUp"
            app:shadowEnabled="true"
            app:cornerRadius="10dp"
            app:shadowHeight="5dp"
            />
        <info.hoang8f.widget.FButton
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:buttonColor="@color/btnSignUpActive"
            app:shadowEnabled="true"
            app:cornerRadius="10dp"
            app:shadowHeight="5dp"
            />
    </LinearLayout>

</RelativeLayout>
